{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom"],
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "./**/*.test.tsx",
    "./**/*.test.ts",
    "./node_modules/**/*"
  ]
}
